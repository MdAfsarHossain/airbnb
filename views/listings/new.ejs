<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-4">
    <div class="col-8 offset-2">

        <h3>Create A New Listing</h3>
        <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
            
            <div class="mb-3">
                <label for="title" class="from-label">Title</label>
                <input class="form-control" type="text" placeholder="Add a catchy title" name="listing[title]" required>
                <div class="valid-feedback">
                    Title looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter a valid title.
                </div>
            </div>
            
            <div class="mb-3">
                <label for="description" class="from-label">Description</label>
                <textarea name="listing[description]" class="form-control"  placeholder="Enter Description" required></textarea>
                <div class="invalid-feedback">
                    Please enter a small description.
                  </div>
                  <div class="valid-feedback">
                    Description Looks good!
                </div>
            </div>
            
            <div class="mb-3">
                <label for="image" class="from-label">Upload Image</label>
                <input class="form-control" type="file" name="listing[image]" placeholder="Enter Image URL/Link" required>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="from-label">Price</label>
                <input class="form-control" type="text" name="listing[price]" placeholder="1200" required>
                <div class="invalid-feedback">
                    Please enter a valid price.
                  </div>
                  <div class="valid-feedback">
                    Price looks good!
                </div>
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="country" class="from-label">Country</label>
                <input class="form-control" type="text" name="listing[country]" placeholder="Bangladesh" required>
                <div class="invalid-feedback">
                    Please enter a valid country.
                  </div>
                  <div class="valid-feedback">
                    Country looks good!
                </div>
            </div>
        </div>
            
        <div class="mb-3">
            <label for="location" class="from-label">Location</label>
            <input class="form-control" type="text" name="listing[location]" placeholder="Oxyzen, Chattogram" required>
            <div class="invalid-feedback">
                Please enter a valid location.
              </div>
              <div class="valid-feedback">
                Country looks good!
            </div>
        </div>
        
        <!-- <br><br> -->
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
</div>
</div>